<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit transaction-type="RESOURCE_LOCAL" name="songdb">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>Songs</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>


    <properties>

    <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

    <!--Need to add Database URL, User and Password -->
        
    <property name="javax.persistence.jdbc.url"/>

    <property name="javax.persistence.jdbc.user"/>

    <property name="javax.persistence.jdbc.password"/>

    <!--Hibernate properties-->


    <property name="hibernate.show_sql" value="true"/>

    <property name="hibernate.format_sql" value="false"/>

    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>

    <!-- The connection is released after each statement executionand reacquired prior to running the next statement. -->


    <property name="hibernate.connection.release_mode" value="after_statement"/>

    <!-- Connection pool properties -->


    <property name="hibernate.c3p0.min_size" value="1"/>

    <property name="hibernate.c3p0.max_size" value="8"/>

    <!-- in seconds: When an idle connection is removed from the poolHibernate default: 0, never expire. -->


    <property name="hibernate.c3p0.timeout" value="1800"/>

    <!-- Number of prepared statements that will be cached.Hibernate default: 0 , caching is disable. -->


    <property name="hibernate.c3p0.max_statements" value="50"/>

 </properties>

</persistence-unit>

</persistence>
